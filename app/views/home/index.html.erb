<div class="home">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="<%= image_url('go-fund-blank-light.jpeg') %>" alt="carrusel!!!">
                <div class="carousel-caption">
                    Go found <span class="bold">anything</span>|
                </div>
            </div>
            <div class="item">
                <img src="<%= image_url('go-fund-family-light.jpeg') %>" alt="carrusel!!!">
                <div class="carousel-caption">
                    Go found <span class="bold">a family</span>|
                </div>
            </div>
            <div class="item">
                <img src="<%= image_url('go-fund-pet-light.jpg') %>" alt="carrusel!!!">
                <div class="carousel-caption">
                    Go found <span class="bold">a pet</span>|
                </div>
            </div>
            <div class="item">
                <img src="<%= image_url('go-fund-project-light.jpeg') %>" alt="carrusel!!!">
                <div class="carousel-caption">
                    Go found <span class="bold">a project</span>|
                </div>
            </div>
            <div class="item">
                <img src="<%= image_url('go-fund-classroom-light.jpeg') %>" alt="carrusel!!!">
                <div class="carousel-caption">
                    Go found <span class="bold">a classroom</span>|
                </div>
            </div>
            <div class="form">
                <%= link_to "Start a Campaign", new_campaign_path, class: "btn btn-primary btn-lg" %>
                <div class="form-group search">
                    <input type="text" class="form-control" placeholder="Search by name, title, or city"/>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row categories">
                <div class="item col-md-2 col-md-offset-1">
                    <%= link_to category_path("Medical"), class: "col-md-12" do %>
                        <span class="icon-heart"></span>
                    <% end %>
                    <span class="title">
                        Medical
                    </span>
                </div>
                <div class="item col-md-2">
                    <%= link_to category_path("Sports"), class: "col-md-12" do %>
                        <span class="icon-futbol-o"></span>
                    <% end %>
                    <span class="title">
                        Sports
                    </span>
                </div>
                <div class="item col-md-2">
                    <%= link_to category_path("Events"), class: "col-md-12" do %>
                        <span class="icon-calendar-o"></span>
                    <% end %>
                    <span class="title">
                        Events
                    </span>
                </div>
                <div class="item col-md-2">
                    <%= link_to category_path("Animals"), class: "col-md-12" do %>
                        <span class="icon-paw"></span>
                    <% end %>
                    <span class="title">
                        Animals
                    </span>
                </div>
                <div class="item col-md-2">
                    <%= link_to category_path("Education"), class: "col-md-12" do %>
                        <span class="icon-book"></span>
                    <% end %>
                    <span class="title">
                        Education
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="categories-desc">
        <div class="row">
            
            <%- @campaigns.each do |f| %>
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <%= image_tag f.image, alt: "Medical" %>
                    <div class="caption">
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%=porciento_completado(f) * 100 %>%">
                                <%= number_to_percentage(porciento_completado(f) * 100, precision: 0)  %>
                            </div>
                        </div>
                        <h3>
                        <%= link_to campaign_path(f) do %>
                            <% if f.category == "Medical" %>
                                <span class="icon-heart"></span> f.titulo
                            <% end %>
                            <% if f.category == "Sports" %>
                                <span class="icon-futbol-o"></span> f.titulo
                            <% end %>
                            <% if f.category == "Events" %>
                                <span class="icon-calendar-o"></span> f.titulo
                            <% end %>
                            <% if f.category == "Animals" %>
                                <span class="icon-paw"></span> f.titulo
                            <% end %>
                            <% if f.category == "Education" %>
                                <span class="icon-book"></span> f.titulo
                            <% end %>
                        <% end %>
                                
                        </h3>
                        <p><%= f.resena %></p>
                        <div class="overlay"></div>
                        <%= link_to campaign_path(f), class: "btn btn-link" do %>
                            <span class="icon-plus"></span> Read More
                        <% end %>
                        
                    </div>
                </div>
            </div>
        <%- end %>
        </div>
    </div>
        
</div>

