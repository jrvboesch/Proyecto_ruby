<h1>Edit Campaign</h1>
<p> <em> Ingrese los datos necesarios: </em> </p>

<% if @campaign.errors.any? %>
  <div>
    Por favor corrija los siguientes problemas:
    <ul>
      <% @campaign.errors.full_messages.each do |m| %>
        <li>
          <%= m %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>


<div>
  <%= form_for @campaign do |f| %>
    <p>
      <%= f.label :titulo, "Titulo", class: "input-group"%>
      <%= f.text_field :titulo, class: "form-control" %>
    </p>

    <p>
      <%= f.label :resena, "Resena", class: "input-group"  %>
      <%= f.text_field :resena, class: "form-control" %>
    </p>

    <p>
      <%= f.label :description , class: "input-group"%>
      <%= f.text_area :description, class: "form-control"%>
    </p>

    <p>
      <%= f.label :category , class: "input-group"%>
      <%= f.select :category, Campaign.categories, class: "form-control"%>
    </p>

    <p>
      <%= f.label :image, "Imagen", class: "input-group" %>
      <%= f.text_field :image, class: "form-control" %>
    </p>

    <p>
      <%= f.label :finalizado_en, "Finaliza en", class: "input-group" %>
      <%= f.date_field :finalizado_en, class: "form-control" %>
    </p>

    <p>
      <%= f.submit "Update", class:"btn btn-default btn-lg" %>
      <%= link_to "Cancelar", campaigns_path, class:"btn btn-default btn-lg" %>
      <% unless @campaign.donations.any? %>
        <%= link_to "Borrar", @campaign, method: :delete, data: {confirm: "Are you really sure?"}, class:"btn btn-default btn-lg" %>
      <% end %>
    </p>

  <% end %>

</div>
