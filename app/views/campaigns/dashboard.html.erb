<h1>My Dashboard</h1>

<% if flash[:notice] %>
	<div>
		<%= flash[:notice] %>
	</div>
<% end %>

<table>
	<thead>
		<tr>
			<th>Titulo</th>
			<th>Rese√±a</th>
