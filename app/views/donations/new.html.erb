<h1>Nueva Donation</h1>

<div>
	<%= render partial: "shared/errors", locals: { obj: @donation } %>

	<%= form_for [@campaign, @donation] do |f| %>
		<% if current_user %>
		<p>
			<%= f.hidden_field :autor, value: User.find(current_user.id).name %>
		</p>
		<% else %>
		<p>
			<%= f.label :autor, "Autor" %>
			<%= f.text_field :autor %>
		</p>
		<% end %>

		<p>
      <%= f.label :mensaje, "Descripcion" %>
      <%= f.text_area :mensaje %>
    </p>

		<p>
			<%= f.label :monto, "Descripcion" %>
			<%= f.number_field :monto %>
		</p>

		<p>
			<%= f.submit "Agregar donacion" , class:"btn btn-default btn-lg"%>
			<%= link_to "Cancelar", @campaign , class:"btn btn-default btn-lg"%>
		</p>
	<% end %>
</div>
